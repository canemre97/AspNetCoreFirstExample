@{
    ViewData["Title"] = "Add";
}
@model Product

<h1>Ürün Ekleme</h1>

<form asp-controller="Products" asp-action="Add" method="post">
    <label>Ürün İsmi</label>
    <input type="text" name="Name" asp-for="Name" /> <br />
    <label>Ürün Fiyat</label>
    <input type="number" name="Price" asp-for="Price" /> <br />
    <label>Ürün Stok</label>
    <input type="number" name="Stock" asp-for="Stock" /> <br />
    <label>Ürün Renk</label>
    <input type="text" name="Color" asp-for="Color" /> <br />

    <button type="submit">Kaydet</button>

</form>

