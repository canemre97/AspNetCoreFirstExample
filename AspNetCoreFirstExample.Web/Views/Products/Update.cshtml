
@{
    ViewData["Title"] = "Update";
}

@model Product

<h1>Ürün Güncelleme</h1>

<form asp-controller="Products" asp-action="Update" asp-route-productId="@Model.Id" method="post">
   @* <input type="hidden" asp-for="Id"/>*@
    <label>Ürün İsmi</label>
    <input type="text" name="Name" asp-for="Name"/> <br />
    <label>Ürün Fiyat</label>
    <input type="text" name="Price" asp-for="Price"/> <br />
    <label>Ürün Stok</label>
    <input type="number" name="Stock" asp-for="Stock"/> <br/>
    <label>Ürün Renk</label>
    <input type="text" name="Color" asp-for="Color"/> <br/>

    <button type="submit">Güncelle</button>

</form>

